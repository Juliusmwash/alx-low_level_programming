# Compiler to be used
CC = gcc

# .c files
SRC = main.c school.c

# .o files (derived from .c files)
OBJ = $(SRC:.c=.o)

# Name of the executable
NAME = school

# Default rule
all: $(NAME)

# Build the executable
$(NAME): $(OBJ)
	@$(CC) $^ -o $@

# Rule to compile main.c
main.o: main.c
	@$(CC) -c -o $@ $<

# Rule to compile school.c
school.o: school.c
	@$(CC) -c -o $@ $<

# Clean rule to remove the executable and object files
clean:
	@rm -f $(NAME) $(OBJ)

